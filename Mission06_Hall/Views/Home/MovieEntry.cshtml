@{
}

@model Entry

<h1>Submit A Movie To The Database</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Category)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title"/>
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number" min="1888"/>
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director"/>
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="TV-PG">TV-PG</option>
        <option value="UR">UR</option>
        <option value="NR">NR</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Was the movie edited?:</label>
    <select asp-for="Edited">
        <option value="">Select</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Was the movie copied to plex?:</label>
    <select asp-for="CopiedToPlex">
        <option value="">Select</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" maxlength="25" />
    <br />

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>
</form>
